            android:name="com.dokter.yacob.dokter.PengkajianAwalActivity2"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.dokter.yacob.dokter.PengkajianAwalActivity3"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.dokter.yacob.dokter.PengkajianAwalActivity4"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.dokter.yacob.dokter.PengkajianAwalActivity5"
            android:screenOrientation="portrait" />
        <activity android:name="com.dokter.yacob.dokter.ResetPasswordActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            ></activity>
    </application>

</manifest>